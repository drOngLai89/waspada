{
  "expo": {
    "name": "Berani",
    "slug": "berani",
    "scheme": "berani",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111111"
    },
    "android": {
      "package": "com.drsherman.berani",
      "versionCode": 1,
      "permissions": ["READ_MEDIA_IMAGES", "CAMERA"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111111"
      }
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Berani to select incident photos.",
          "cameraPermission": "Allow Berani to take photos for incident reports."
        }
      ]
    ]
  }
}
